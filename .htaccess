Options -Indexes
RewriteEngine On
RewriteBase /

# Route admin module admin pages to the module router
# e.g. /admin/modules/comments/ â†’ admin/modules/module-router.php?slug=comments
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^admin/modules/([a-z0-9-]+)/?$ admin/modules/module-router.php?slug=$1 [L,QSA]

# Frontend routing: all other non-existing paths go to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L]
